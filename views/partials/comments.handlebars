    <div class="card mt-2">
        <div class="card-body">
            <div class="meta">
                {{user.username}} on {{format_date created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </div>
    </div>
    {{/each}}
</div>